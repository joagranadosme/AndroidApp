<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MyBlue"
    android:orientation="vertical"
    tools:context="com.example.jonathan.evaluacion.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/MyBlue"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/MyBlue"
            android:gravity="center"
            android:text="Selecciona tu servicio"
            android:textColor="@color/MyWhite"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/MyBlue"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/MyOrange"
            android:onClick="adminClick"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/admin" />

        <ImageButton
            android:id="@+id/benef"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/MyOrange"
            android:onClick="benefClick"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/beneficios" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/MyBlue"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/desemp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/MyOrange"
            android:onClick="performanceClick"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/desempeno" />

        <ImageButton
            android:id="@+id/compen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/MyOrange"
            android:onClick="compenClick"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/compensacion" />
    </LinearLayout>

</LinearLayout>
